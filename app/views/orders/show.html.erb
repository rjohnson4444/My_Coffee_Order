<h1> <%= current_user.username.capitalize %>'s Past Orders </h1>

<div class="row">
  <div class="col s10">
    <ul class="collection with-header">
      <li class="collection-header"><h4 id="order_id">Order #: <%= @order.id%></h4></li>
      <% @order.items.each do |item| %>
      <li class="collection-item"><h5 id="item-title<%= item.id %>"><%= link_to "#{item.title}", item_path(item)%></h5></li>
      <li class="collection-item" id="item-quantity<%= item.id %>">Quantity: <%= @order.quantity_of_item(item.id) %></li>
      <li class="collection-item" id="item-price<%= item.id %>" >Price: <%= number_to_currency(item.price) %></li>
      <br>
      <% end %>
      <li class="collection-item"><strong>Total Quantity: <%=@order.quantity %></strong></li>
      <li class="collection-item"><strong>Date of Order: <%= @order.created_at.strftime("%b. %d, %Y") %></strong></li>
      <li class="collection-item"><strong>Order Total Price: <%=number_to_currency(@order.sum) %></strong></li>
      <li class="collection-item"><strong>Order Status: <%= @order.status %></strong></li>
    </ul>
  </div>

  <div class="col s2">
    <%= button_to "Back to Orders", orders_path, method: :get %>
  </div>
</div>
